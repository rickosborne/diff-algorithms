[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
insert_final_newline = true
max_line_length = 200
tab_width = 4
trim_trailing_whitespace = true

[{*.js,*.mjs}]
ij_javascript_use_double_quotes = true
ij_javascript_force_quote_style = true

[{*.ts,*.tsx,*.mts}]
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = true
