{
	"author": {
		"name": "Rick Osborne",
		"url": "https://rickosborne.org"
	},
	"description": "Straightforward implementations of Diff algorithms, including Myers Diff",
	"devDependencies": {
		"@eslint/js": "9.11.0",
		"@stylistic/eslint-plugin-js": "2.8.0",
		"@tsconfig/node20": "20.1.4",
		"@types/chai": "4.3.19",
		"@types/eslint__js": "8.42.3",
		"@types/mocha": "10.0.8",
		"@types/node": "22.5.5",
		"@typescript-eslint/eslint-plugin": "8.6.0",
		"@typescript-eslint/parser": "8.6.0",
		"chai": "4.5.0",
		"eslint": "9.11.0",
		"eslint-plugin-editorconfig": "4.0.3",
		"eslint-plugin-jsonc": "2.16.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-require-extensions": "0.1.3",
		"eslint-plugin-sort-keys-fix": "1.1.2",
		"globals": "15.9.0",
		"mocha": "10.7.3",
		"nyc": "17.1.0",
		"rfc6902": "5.1.1",
		"tsx": "4.19.1",
		"typescript": "5.6.2",
		"typescript-eslint": "8.6.0"
	},
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/esm/index.js"
		}
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/rickosborne/diff-algorithms",
	"keywords": [
		"diff",
		"typescript"
	],
	"license": "CC-BY-NC-SA-4.0",
	"main": "dist/cjs/index.js",
	"mocha": {
		"checkLeaks": true,
		"node-option": ["import=tsx"],
		"recursive": true
	},
	"name": "@rickosborne/diff-algorithms",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rickosborne/diff-algorithms.git"
	},
	"scripts": {
		"build": "tsc -b tsconfig.cjs.json tsconfig.module.json tsconfig.types.json && cp static/esm-package.json dist/esm/package.json && cp static/cjs-package.json dist/cjs/package.json",
		"clean": "rm -rf ./dist",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prebuild": "npm run clean",
		"test": "mocha 'ts/**/*.test.ts'",
		"test:coverage": "nyc mocha 'ts/**/*.test.ts'",
		"type-check": "tsc --noEmit",
		"upgrade:check": "npx npm-check-updates"
	},
	"version": "2024.9.24"
}
